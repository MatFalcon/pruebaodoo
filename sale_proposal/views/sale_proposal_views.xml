<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="seq_sale_proposal" model="ir.sequence">
            <field name="name">Sale Proposal</field>
            <field name="code">sale.proposal</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
        </record>
        <record id="view_sale_proposal_tree" model="ir.ui.view">
            <field name="name">sale.proposal.tree</field>
            <field name="model">sale.proposal</field>
            <field name="arch" type="xml">
                <tree string="Sale Proposals">
                    <field name="number" string="Number"/>
                    <field name="state" decoration-success="state == 'sale'" decoration-info="state == 'draft'" decoration-primary="state == 'sent'" widget="badge"/>
                </tree>
            </field>
        </record>
        <record id="view_sale_proposal_form" model="ir.ui.view">
            <field name="name">sale.proposal.form</field>
            <field name="model">sale.proposal</field>
            <field name="arch" type="xml">
                <form string="Sale Proposal">
                    <header>
                        <button name="action_quotation_send" id="send_by_email_primary" string="Send by Email" type="object" data-hotkey="g" invisible="state != 'draft'" class="btn-primary" context="{'validate_analytic': True}"/>
                        <button name="action_preview_sale_order" string="Preview" type="object" class="btn-secondary"/>
                        <button name="action_confirm" id="action_confirm" data-hotkey="q" string="Confirm" class="btn-primary" type="object" context="{'validate_analytic': True}" invisible="state != 'sale'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="number" readonly="1"/>
                        </h1>
                        <group>
                            <group name="partner_details">
                                <field name="partner_id" widget="res_partner_many2one" placeholder="Type to find a customer..." />
                                <field name="full_address" readonly="1" widget="text"/>
                                <field name="partner_invoice_id" invisible="1" />
                                <field name="partner_shipping_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="state" readonly="1"/>
                                <field name="validity_date" />
                                <field name="payment_term_id" readonly="1" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Order Lines" name="order_lines">
                                <field name="order_line" widget="section_and_note_one2many" mode="tree" readonly="state == 'cancel'">
                                    <tree editable="bottom">
                                        <field name="product_id" />
                                        <field name="product_uom_qty"/>
                                        <field name="price_unit" />
                                        <field name="tax_id" widget="many2many_tags" />
                                        <field name="price_subtotal" />
                                    </tree>
                                    <form>
                                        <field name="product_id" />
                                        <field name="product_uom_qty" />
                                        <field name="price_unit" />
                                        <field name="tax_id" widget="many2many_tags" />
                                        <field name="price_subtotal" />
                                    </form>
                                </field>
                            </page>
                            <page string="Other Info" name="other_information">
                                <group>
                                    <field name="company_id" />
                                    <field name="user_id" widget="many2one_avatar_user" />
                                    <field name="team_id" context="{'kanban_view_ref': 'sales_team.crm_team_view_kanban'}" options="{'no_create': True}" />
                                    <field name="proposal_status"/>
                                    <field name="sale_order_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_sale_proposal" model="ir.actions.act_window">
            <field name="name">Sale Proposals</field>
            <field name="res_model">sale.proposal</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="sale_order_template_menu" name="Sale Proposal" action="action_sale_proposal" parent="sale.sale_order_menu" sequence="1"/>
    </data>
</odoo>
