<?xml version="1.0"?>
<odoo>
    <record id="view_sale_proposal_tree" model="ir.ui.view">
        <field name="name">sale.proposal.tree</field>
        <field name="model">sale.proposal</field>
        <field name="arch" type="xml">
            <tree string="Sale Proposals">
                <field name="name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="seq_sale_proposal" model="ir.sequence">
        <field name="name">Sale Proposal</field>
        <field name="code">sale.proposal</field>
        <field name="padding">4</field>
        <field name="number_increment">1</field>
    </record>

    <record id="view_sale_proposal_form" model="ir.ui.view">
        <field name="name">sale.proposal.form</field>
        <field name="model">sale.proposal</field>
        <field name="arch" type="xml">
            <form string="Sale Proposal">
                <header> 
                    <button name="action_quotation_send" string="sent by Email" type="object" class="btn-primary" data-hotkey="g" invisible="state not in ['draft']"/>
                    <button name="action_confirm_btn" string="Confirm" type="object" invisible="proposal_status in ['not_reviewed']"/>
                    <button name="action_preview_sale_proposal" string="Preview" type="object" invisible="state in ['draft']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,confirm"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="customer" string="Customer" readonly="state in ['confirm']"/>
                            <field name="quotation_template" string="Quotation Template" readonly="state in ['confirm']"/>
                        </group>
                        <group>
                            <field name="quotation_date" readonly="state in ['confirm']"/>
                            <field name="expiration_date" readonly="state in ['confirm']"/>
                            <field name="payment_terms" readonly="state in ['confirm']"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_ids" readonly="state in ['confirm']"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="proposal_status"/>
                                <field name="sale_order" widget="url"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sale_proposal" model="ir.actions.act_window">
        <field name="name">Proposal</field>
        <field name="res_model">sale.proposal</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
