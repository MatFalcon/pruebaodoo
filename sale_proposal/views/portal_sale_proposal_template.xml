<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_sale_proposal_template" name="Sale Proposal">
        <t t-call="website.layout">
            <div class="container">
                <br/>
                <h3 class="text-primary">Sale Proposal: <t t-esc="proposal.number"/>
                </h3>
                <p style="font-size: 1.0rem;">
                    <strong>Status:</strong>
                    <span class="badge bg-info">
                        <t t-esc="proposal.state"/>
                    </span>
                </p>
                <p style="font-size: 1.0rem;">
                    <strong>Validity Date:</strong>
                    <t t-esc="proposal.validity_date"/>
                </p>
                <p style="font-size: 1.0rem;">
                    <strong>Payment Terms:</strong>
                    <t t-esc="proposal.payment_term_id.name if proposal.payment_term_id else 'N/A'"/>
                </p>

                <div class="mt-4">
                    <h3 class="text-primary">Customer Details</h3>
                    <div class="border rounded p-3">
                        <p>
                            <strong>Customer:</strong>
                            <t t-esc="proposal.partner_id.name"/>
                        </p>
                        <p>
                            <strong>Address:</strong>
                            <t t-esc="proposal.full_address if proposal.partner_invoice_id else 'N/A'"/>
                        </p>
                    </div>
                </div>
                <div class="mt-4">
                    <h3 class="text-warning">Order Lines</h3>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="table-primary">
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="proposal.order_line" t-as="line">
                                <tr>
                                    <td>
                                        <t t-esc="line.product_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.product_uom_qty"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.price_unit"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.price_subtotal"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <div class="mt-4">
                    <h3 class="text-primary">Other Information</h3>
                    <div class="border rounded p-3">
                        <p>
                            <strong>Company:</strong>
                            <t t-esc="proposal.company_id.name"/>
                        </p>
                        <p>
                            <strong>Salesperson:</strong>
                            <t t-esc="proposal.user_id.name"/>
                        </p>
                        <p>
                            <strong>Sales Team:</strong>
                            <t t-esc="proposal.team_id.name"/>
                        </p>
                        <p>
                            <strong>Proposal Status:</strong>
                            <t t-esc="proposal.proposal_status"/>
                        </p>
                        <p>
                            <strong>Sale Order:</strong>
                            <t t-esc="proposal.sale_order_id.name if proposal.sale_order_id else 'N/A'"/>
                        </p>
                    </div>
                </div>
                <br/>
                <div class="mt-4">
                    <t t-if="proposal.state != 'sale'">
                        <a type="button" class="btn btn-primary" t-attf-href="/my/sale_proposal/accept/#{proposal.id}">Accept</a>
                    </t>
                    <t t-if="proposal.state != 'draft'">
                        <a type="button" class="btn btn-danger" t-attf-href="/my/sale_proposal/reject/#{proposal.id}">Reject</a>
                    </t>
                </div>
                <br/>
            </div>
        </t>
    </template>
</odoo>
