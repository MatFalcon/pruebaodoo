<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="estate_action" model="ir.actions.act_window">
        <field name="name">Accion</field>
        <field name="res_model">estate.propiedad</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- vista en lista -->

    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.view.tree</field>
        <field name="model">estate.propiedad</field>
        <field name="arch" type="xml">
            <tree string="Propiedades">
                <field name="nombre"></field>
                <field name="cp"></field>
                <field name="dormitorios"></field>
                <field name="area_habitable"></field>
                <field name="precio_esperado"></field>
                <field name="precio_venta"></field>
                <field name="fecha_disponibilidad"></field>
            </tree>
        </field>
    </record>


    <!-- Vista formulario -->

    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.view.form</field>
        <field name="model">estate.propiedad</field>
        <field name="arch" type="xml">
            <form string="Propiedades">
                <sheet>
                    <header>
                        <h1><field name="nombre"></field></h1>
                        <separator></separator>
                    </header>
                    <separator></separator>
                    <!-- No funcionan las columnas -->
                    <group colspan="2">
                    <group>
                        <field name="cp"></field>
                        <field name="fecha_disponibilidad"></field>
                    </group>
                    <group col="2">
                        <field name="precio_esperado"></field>
                        <field name="precio_venta"></field>
                    </group>
                </group>
                    <notebook>
                        <page name="description" string="DescripciÃ³n">
                            <group>
                                <field name="descripcion"></field>
                                <field name="dormitorios"></field>
                                <field name="area_habitable"></field>
                                <field name="fachadas"></field>
                                <field name="garaje"></field>
                                <field name="area_jardin"></field>
                                <field name="orientacion_jardin"></field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
