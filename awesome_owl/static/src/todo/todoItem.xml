<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todoItem">
        <div class="card d-inline-block m-2" style="width: 16rem;">
            <p class="m-2" t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
                <input type="checkbox" t-on-change="toggleCheckbox"
                t-att-checked="props.todo.isCompleted ? 'checked' : null" class="m-2"/> 
                <t t-out="props.todo.id"/>. <t t-out="props.todo.description"/>
            <span class="fa fa-remove m-2" t-on-click="removeTodo"/>
            </p>
        </div>
    </t>
</templates>
