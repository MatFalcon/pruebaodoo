<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_item">
        <div t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
            <!-- calling the toggleState method from props, passing the todo item id -->
            <input type="checkbox" t-on-change="ev => props.toggleState(ev, props.todo.id)" t-att-checked="props.todo.isCompleted"/>
            <t t-esc="props.todo.id"/> - 
            <t t-esc="props.todo.description"/>
            <span t-on-click="ev => props.removeTodo(ev, props.todo.id)" class="fa fa-remove"/>
        </div>
    </t>

</templates>
