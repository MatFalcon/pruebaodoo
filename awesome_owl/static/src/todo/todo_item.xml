<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_item">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" t-att-id="'checkbox-' + props.todo.id" t-att-checked="props.todo.isComplete" t-on-change="onChange"/>
            <label t-att-for="'checkbox-' + props.todo.id" t-att-class="{'text-decoration-line-through text-muted' : props.todo.isComplete}">
                <t t-esc="props.todo.id"/>.
                <t t-esc="props.todo.description"/>
            </label>
            <span role="button" class="fa fa-remove" style="font-size: 20px; color: red; margin-left: 1em;" t-on-click="removeTodo"/>
        </div>
    </t>
</templates>
