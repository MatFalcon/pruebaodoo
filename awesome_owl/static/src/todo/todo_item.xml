<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_item">
        <li t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
            <input type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="onCheckboxChange"></input>
            <div t-esc="props.todo.id"></div>
            <p t-esc="props.todo.description"></p>
            <span class="fa fa-remove" t-on-click="onDelete" />
        </li>
    </t>
</templates>