<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoList">
        <input type="text"
               placeholder="Add a todo"
               t-on-keyup="addTodo"/>
        <t t-foreach="todos"
           t-as="todo"
           t-key="todo.id">
            <TodoItem todo="todo"
                      toggleState.bind="toggleTodo"
                      removeTodo.bind="removeTodo"/>
        </t>
    </t>
</templates>
