<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_list">
        <input type="text" t-on-keyup="addTodo" t-ref="refinput_todo"/>
        <ol>
            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem item="todo" toggleState.bind="toggleItem" removeTodo.bind="remove"/>
            </t>
        </ol>
    </t>

</templates>
