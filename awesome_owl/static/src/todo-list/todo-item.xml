<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.TodoItem">
        <div t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
            <input  type="checkbox" t-on-change="_onChange"/>
            <t t-esc="props.todo.id + '. ' + props.todo.description"/> 
            <span class="fa fa-remove" t-on-click="_onClick" />         
        </div>
    </t>

</templates>
