<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_item">
        <div class="todo-item">
            <p t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
                <input type="checkbox" t-att-checked="props.todo.isCompleted"
                       t-on-change="onCheckboxChangeUpdateCompleted"/>
                <t t-esc="props.todo.id"/>.
                <t t-esc="props.todo.description"/>
                <button class="btn btn-primary" t-on-click="onClickDeleteItem"><span class="fa fa-remove"/></button>
            </p>
        </div>
    </t>

</templates>
