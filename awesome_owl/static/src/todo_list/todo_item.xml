<?xml version="1.0"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_item">
        <div t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
            <input type="checkbox" t-on-click="toggle" t-att-checked="props.todo.isCompleted" style="margin-right: 1rem;"/>
            <t t-esc="props.todo.id"/>.
            <t t-esc="props.todo.description"/>
            <span class="fa fa-remove text-danger" t-on-click="remove" style="margin-left: 1rem;"/>
        </div>
    </t>
</templates>
