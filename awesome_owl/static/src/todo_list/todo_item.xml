<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todoItem">
        <div t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
            <input type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="onChange"/>
            <t t-esc="props.todo.id"/>
            .
            <t t-esc="props.todo.description"/>
            <span role="button" class="fa fa-remove ms-3 text-danger" t-on-click="onRemove"/>
        </div>
    </t>
</templates>
