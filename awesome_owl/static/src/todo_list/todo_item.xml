<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoItem">        
        <div 
            class="m-2 p-2 border"
            t-att-class="{'text-muted': this.props.todo.isCompleted, 'text-decoration-line-through': this.props.todo.isCompleted}"
        >
            <span class="me-2">
                <input type="checkbox" t-on-change="this.checkboxStateChanged"/>
                <t t-esc="this.props.todo.id"/>.
                <t t-esc="this.props.todo.description"/>   
            </span>
        </div>
    </t>
</templates>
