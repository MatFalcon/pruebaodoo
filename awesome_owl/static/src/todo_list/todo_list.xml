<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_list">
        <div>
        <input type="text" placeholder="Add a todo" t-on-keyup="addTodo" t-ref="ref_todo_input"/>
            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" toggleState.bind="toggleTodoCompleted"/>
            </t>
        </div>
    </t>
</templates>
