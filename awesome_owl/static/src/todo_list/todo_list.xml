<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_list">
        <div class="d-inline-block border p-2 m-2">
            <h1>Todo List</h1>
            <input class="form-control mb-3" type="text" placeholder="Add a todo" t-on-keyup="addTodo" t-ref="input"/>
            <ul>
                <li t-foreach="todos" t-as="todo" t-key="todo.id">
                    <TodoItem toggleState.bind="toggleTodo" removeTodo.bind="removeTodo" todo="todo"/>
                </li>
            </ul>
        </div>
    </t>
</templates>
