<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_list">
        <div class="d-inline-block border">
            <input type="text" placeholder="Enter a task name" t-on-keyup="addTodo" t-ref="todo_input"/>
            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" onChange.bind="toggleState" onDelete.bind="removeTodo"/>
            </t>
        </div>

    </t>
</templates>

