<?xml version="1.0"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_list">
        <div class="card d-inline-block m-2" style="padding: 1rem;">
            <input type="text" t-ref="input" placeholder="Add a todo" t-on-keyup="ev => this.addTodo(ev)" style="margin-bottom: 1rem;"/>
            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" toggleState.bind="toggleTodo" removeTodo.bind="removeTodo"/>
            </t>
        </div>
    </t>
</templates>
