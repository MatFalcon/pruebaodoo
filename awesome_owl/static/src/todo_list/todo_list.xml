<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_list">
        <div class="d-inline-block border p-2" style="margin:20px;">
            <input class="form-control mb-3" t-on-keyup="addTodo" placeholder="Enter a new task" t-ref="input"/>
            <div t-foreach="todos" t-as="todo_item" t-key="todo_item.id">
                <TodoItem todo="todo_item" toggleState.bind="toggleState" removeTodo.bind="removeTodo"/>
            </div>
        </div>
    </t>

</templates>