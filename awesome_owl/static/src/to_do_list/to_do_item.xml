<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.to_do_item">
        <div class="p-1 border m-2 d-flex flex-row " t-att-class="{'text-muted':
        props.todo.isCompleted,'text-decoration-line-through':props.todo.isCompleted}">
            <input type="checkbox"  value="props.todo.isCompleted" t-on-change="check"/>
            <id class="ms-2"><t t-esc="props.todo.id" />.</id>
            <p class="ms-4 my-auto"><t t-esc="props.todo.description"/></p>
            <span class="ms-auto me-2 fa fa-remove" t-on-click="rmTodo"/>
        </div>
    </t>
</templates>