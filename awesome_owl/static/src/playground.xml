<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.playground">
        <div class="playground m-3 p-3">
            <Card title="'card 1'">
                content of card 1
            </Card>
            <Card title="'card 2'">
                <t t-out="markupText"/>
            </Card>

            <Card title="'Counters'">
                <Counter onChange.bind="incrementSum"/>
                <Counter onChange.bind="incrementSum"/>
