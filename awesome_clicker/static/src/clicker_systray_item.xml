<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_clicker.ClickerSystrayItem">
        <div class="o_nav_entry gap-1">
            <p class="mb-0">
                Clicks: <t t-esc="clickerService.state.score" />
            </p>
            <button class="btn btn-secondary" t-on-click="() => this.clickerService.incrementScore(9)">
                <i class="fa fa-plus"></i>
            </button>
            <button class="btn btn-secondary" t-on-click="openClientAction">
                Open
            </button>
        </div>
   </t> 

</templates>