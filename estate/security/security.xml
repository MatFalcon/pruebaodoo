<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
    </record>

    <record id="estate_property_rule" model="ir.rule">
        <field name="name">Edit/update/delete your own properties</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="perm_read" eval="False"/>
        <field name="groups" eval="[Command.link(ref('base.group_user'))]"/>
        <field name="domain_force">[
            '|', ('salesman_id', '=', user.id),
                 ('salesman_id', '=', False)
        ]</field>
    </record>

    <record id="estate_property_rule_manager" model="ir.rule">
        <field name="name">Manager can do whatever</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]"/>
    </record>

    <record id="estate_property_multi_company_rule_user" model="ir.rule">
        <field name="name">Property CRUD for multi-company</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('base.group_user'))]"/>
        <field name="domain_force">[
            '|', ('company_id', '=', False),
                 ('company_id', 'in', company_ids)
        ]</field>
    </record>
</odoo>