<?xml version="1.0"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="rule_id" model="ir.rule">
        <field name="name">Estate property Agent </field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[4, (ref('estate.estate_group_user'))]" />
        <field name="domain_force">[
            '|', ('seller_id', '=', user.id),
            ('seller_id', '=', False)
            ]</field>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>
    <record id="estate_property_rule_manager" model="ir.rule">
        <field name="name">Estate property manager </field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('estate.estate_group_manager'))]"/>
    </record>

    <record model="ir.rule" id="access_company_rule">
        <field name="name">Agent access multi-company</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="global" eval="True"/>
        <field name="domain_force">
            [('company_id', 'in', company_ids)]
        </field>
    </record>
</odoo>