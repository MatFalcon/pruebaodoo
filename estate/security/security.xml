<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="base.module_category_real_estate_brokerage" model="ir.module.category">
        <field name="sequence">1</field>
    </record>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="comment">This user will be able to manage properties assigned to them or no one.</field>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(ref('estate_group_user'))]"/>
        <field name="comment">This user will be able to configure the estate app and manage all the properties.</field>
    </record>

    <record id="estate_property_comp_rule" model="ir.rule">
        <field name="name">Property multi-company</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
    </record>

    <record id="estate_property_user_rule" model="ir.rule">
        <field name="name">Restrict user access to properties that they are assigned to or that are unassigned.</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>
        <field name="domain_force">[('salesperson_id', 'in', [user.id, False])]</field>
    </record>

    <record id="estate_property_manager_rule" model="ir.rule">
        <field name="name">Allow managers to access all properties.</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>
