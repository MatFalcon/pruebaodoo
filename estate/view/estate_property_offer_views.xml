<odoo>
    <record id="action_account_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate_property_offer_tree</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name='price' />
                <field name='partner_id' />
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_confirm" type="object"  title="confirm" icon="fa-check"/>
                <button name="action_refused" type="object" title="refused" icon="fa-times"/>

                <field name='status' />
            </tree>
        </field>
    </record>


    <record id="action_account_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate_property_offer_form</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name='price' />
                        <field name='partner_id' />
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name='status' />

                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>