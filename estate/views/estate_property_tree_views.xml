<?xml version="1.0" encoding="UTF-8"?>
<odoo>

     <record id="frontdesk_visitor_view_search" model="ir.ui.view">
        <field name="name">frontdesk.visitor.view.search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Available" name="state"
                    domain="['|',('state', '=', 'offer received'),('state', '=', 'offer accepted')]"/>
                 <group expand="1" string="Postcode">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <tree string="Estate Properties" sample ="1">
            <!-- <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a module
                </p>
                <p>
                    Leads are the qualification step before the creation of an opportunity.
                </p>
            </field> -->

                <field name="name"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_property_form" model="ir.ui.view">
        <field name="name">property.form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                    <h1>
                        <field name="name"/>
                    </h1>
                </header>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>

                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                <notebook>
                    <page string="Description">
                        <group>
                            <field name="description"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                            <field name="state"/>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

</odoo>
