<?xml version="1.0"?>
<odoo>

    <record id="estate_property_offer" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate_property_offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
    <!--Search-->

    <record id="estate_type_search" model="ir.ui.view">
        <field name="name">Estate Type search</field>
        <field name="model">estate_property_type</field>
        <field name="arch" type="xml">
            <search string="Channel">
                <field name="name"/>
            </search>
        </field>
    </record>


    <!--Tree view-->
    <record id="estate_type_view_tree" model="ir.ui.view">
        <field name="name">Estate Type tree</field>
        <field name="model">estate_property_type</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!--Form view-->

    <record id="estate_type_view_form" model="ir.ui.view">
        <field name="name">Estate type form</field>
        <field name="model">estate_property_type</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate_property_offer)d" class="oe_stat_button" type="action" icon="fa-bars">
                            <field string="Offers" name="offer_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </group>
                        <notebook>
                            <page string="Properties">
                                <field name="property_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_type_model_action" model="ir.actions.act_window">
        <field name="name">Estate Type</field>
        <field name="res_model">estate_property_type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
