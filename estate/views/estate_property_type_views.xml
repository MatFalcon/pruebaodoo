<?xml version="1.0"?>
<odoo>
    <record id="action_estate_property_type_view" model="ir.actions.act_window">
        <field name="name">Properties Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Estate Property Type">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Estate Property Form">
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button" name="action_smart_button" string="Homes" type="object" invisible="property_count == 0"> 
                            <field name="property_count" widget="statinfo" string="Properties"/>
                        </button>
                        <button name="%(estate.action_open_estate_properties_offer)d" type="action" string="View Offers" class="oe_stat_button" icon="fa-money">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <header>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </header>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="property_type_id"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
