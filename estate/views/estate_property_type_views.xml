<odoo>

    <record id="estate_type_action" model="ir.actions.act_window">
        <field name="name">Property type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="view_estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Property Types">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="estate_type_form" model="ir.ui.view">
        <field name="name">estate_type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate.propertytype_search" model="ir.ui.view">
        <field name="name">estate.property.type.search</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" string="Name"/>
            </search>
        </field>
    </record>

</odoo>