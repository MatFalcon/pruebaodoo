<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_estate_properties_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_model_type_view_tree" model="ir.ui.view">
        <field name="name">estate.model.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Estates">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="estate_model_type_view_form" model="ir.ui.view">
        <field name="name">estate.model.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Estate">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_open_properties" type="object" string="Properties" icon="fa-building" invisible="property_count == 0">
                                <field name="property_count" widget="statinfo" string="Properties"/>
                        </button>

                        <button class="oe_stat_button" name="%(estate.action_estate_properties_offer)d" type="action" string="Offers" icon="fa-gift" invisible="offer_count == 0">
                                <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <header>
                        <h1>
                            <group>
                                <field name="name"/>
                            </group>
                        </h1>
                    </header>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
