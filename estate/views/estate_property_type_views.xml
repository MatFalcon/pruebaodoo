<?xml version="1.0"?>
<odoo>
    <record id="estate_type_view_tree" model="ir.ui.view">
        <field name="name">estate.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="sequence" widget="handle"/>
                <field name="name" string="Type"/>
            </tree>
        </field>
    </record>

    <record id="estate_type_view_form" model="ir.ui.view">
        <field name="name">estate.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Estate Type">
                <sheet>
                    <button type="action" name="%(estate_property_offer_action)d" string="Offers" icon="fa-dollar" 
                        class="btn oe_stat_button btn-outline-secondary flex-grow-1 flex-lg-grow-0">
                        <div class="o_stat_info">
                            <field name="offer_count" widget="statinfo" string="Offers" class="o_stat_text"/>
                        </div>
                    </button>
                    <h1 class="oe_title">
                        <field name="name"/>
                    </h1>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name" string="Title"/>
                                    <field name="expected_price" string="Expected Price"/>
                                    <field name="state" string="Status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_type_view_search" model="ir.ui.view">
        <field name="name">estate.type.search</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Type"/>
            </search>
        </field>
    </record>

    <record id="estate_type_model_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>