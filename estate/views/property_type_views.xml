<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="property_type_view_tree" model="ir.ui.view">
            <field name="name">property.types.view.tree</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <tree string="Estate">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="offer_count"/>
                </tree>
            </field>
        </record>

        <record id="property_type_view_form" model="ir.ui.view">
            <field name="name">property.types.view.form</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form string="Estate">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(property_offer_action)d" class="oe_stat_button" type="action" icon="fa-bars">
                                <field string="Offers" name="offer_count" widget="statinfo"/>
                            </button>
                        </div>
                        <h1><field name="name"/></h1>
                        <notebook>
                            <page string="Properties">
                                <field name="property_ids">
                                    <tree create="false" delete="false">
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_type_view_search" model="ir.ui.view">
            <field name="name">property.types.view.search</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <search string="Estate">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="property_type_action" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form,search</field>
        </record>
    </data>
</odoo>