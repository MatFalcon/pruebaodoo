<?xml version="1.0"?>
<odoo>


    <!--Tree view-->
    <record id="estate_offer_view_tree" model="ir.ui.view">
        <field name="name">Estate Offer tree</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <tree string="Offers" editable="top" decoration-success="status=='accepted'" decoration-danger="status=='refused'">
                <field name="price"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="partner_id"/>
                <field name="property_type_id"/>
                <button name="action_accepted" string="Accept" type="object" icon="fa-check" invisible="status != False"/>
                <button name="action_refused" string="Refuse" type="object" icon="fa-level-down" invisible="status != False"/>
                <field name="status" invisible="1" nolabel="1"/>
            </tree>
        </field>
    </record>

    <!--Form view-->

    <record id="estate_offer_view_form" model="ir.ui.view">
        <field name="name">Estate Offer form</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                    <group>
                        <group>
                            <h1>
                                <field name="price"/>
                            </h1>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <field name="status"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
