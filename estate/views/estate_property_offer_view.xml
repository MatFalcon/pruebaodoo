<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom" decoration-success="status in ['accepted']" decoration-danger="status in ['refused']">
                <field name="partner_id"/>
                <field name="price"/>
                <field name="validity"/>
                <field name="status" column_invisible='true'/>
                <field name="deadline"/>
                <button name="action_accept" type="object" string="accept" icon="fa-check"  invisible="status in ['accepted', 'refused']"/>
                <button name="action_refuse" type="object" string="refuse" icon="fa-times"  invisible="status in ['accepted', 'refused']"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate property type">
                <sheet>
                        <group>
                            <group>
                               <h1 style="width:200px"> <field name="price"/> </h1>
                            </group>
                            <seperator/>
                            <group>
                                <field name="partner_id"/>
                                <field name="validity"/>
                                <field name="deadline"/>
                            </group>
                        </group>
                    </sheet>
            </form>
        </field>
    </record>

</odoo>
