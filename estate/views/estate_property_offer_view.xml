<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_set_accepted_state" type="object" string="Accept" icon="fa-check"/>
                <button name="action_set_rejected_state" type="object" string="Reject" icon="fa-close"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
