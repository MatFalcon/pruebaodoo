<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_estate" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.estate</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Estate" string="Estate" name="estate" logo="/estate/static/description/new.png">
                    <block title="estate property" name="estate_setting_container">
                        <setting id="selling_porperty" help="Property set to sold when the checkbox is click.">
                            <field name="selling_property"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
