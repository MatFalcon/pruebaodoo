<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate property list</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_availability': True}</field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">Estate property tree</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <tree string="Estate" decoration-success="state=='Offer Received'"
                  decoration-danger="state=='Offer Accepted'"
                  decoration-muted="state=='Sold'">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="state" column_invisible="True"/>
            </tree>

        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">Estate property form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Estate property">
                <header>
                    <button name="_sell" type="object" string="Sold" invisible="state in ['Sold','Canceled']"/>
                    <button name="_cancel" type="object" string="Cancel" invisible="state in ['Sold','Canceled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="New,Offer Received,Offer Accepted,Sold"/>
                </header>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                            <field name="tag_ids" widget="many2many_tags" class="mb16"
                                   options="{'color_field': 'color'}" editable="1"/>
                        </div>
                        <p/>
                        <group>
                            <group>
                                <field name="state"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_price"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="property_type_id" options="{'editable': false,}"/>
                                    <field name="total_area"/>
                                    <field name="date_availability" optional="hide"/>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="salesman_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids" readonly="state in ['Offer Accepted','Sold','Canceled']"
                                       editable="1">
                                    <tree string="Estate" editable="bottom" decoration-danger="status=='refused'"
                                          decoration-success="status=='accepted'">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                        <button name="accept" string="Accept" type="object" icon="fa-check"
                                                invisible="status"/>
                                        <button name="refuse" string="Refuse" type="object" icon="fa-times"
                                                invisible="status"/>
                                        <field name="property_type_id"/>
                                        <field name="status" column_invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate_property_search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search string="Estate property">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="living_area" string="Minimum Living Area"
                       filter_domain="[('living_area', '>=', self)]"/>
                <filter string="Available" name="availability"
                        domain="[('state', 'in',['New','Offer Received'])]"/>
                <filter string="Postcode" name="groupby_postcode" context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>
</odoo>