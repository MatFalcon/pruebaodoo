<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Properties" editable="top" decoration-danger="status=='refused'" decoration-success="status=='accepted'">
                <field name="status" column_invisible="1"/>
                <field name="price"/>
                <field name="partner_id"/>
                <button name="action_property_offer_accepted" type="object" icon="fa-check" invisible="status"/>
                <button name="action_property_offer_refused" type="object" icon="fa-times" invisible="status"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property form">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
