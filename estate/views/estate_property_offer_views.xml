<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_set_offer_accepted" type="object" title="Accept" icon="fa-check" invisible="status" />
                <button name="action_set_offer_refused" type="object" title="Refuse" icon="fa-close" invisible="status" />
                <field name="status" />
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property offer form">
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="status" />
                        <field name="validity" />
                        <field name="date_deadline" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>