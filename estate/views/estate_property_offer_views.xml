<?xml version="1.0"?>
<odoo>
    <record id="action_estate_property_offers" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom"
                decoration-success="status in ['accepted']"
                decoration-danger="status in ['refused']"
            >
                <field name="partner_id"/>
                <field name="price"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accepted" type="object" icon="fa-check" invisible="status" title="  "/>
                <button name="action_refused" type="object" icon="fa-close" invisible="status" title="  "/>
                <field name="property_id" column_invisible='true'/>
                <field name="status" column_invisible='true'/>
            </tree>
        </field>
    </record>
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Tags">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="price"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
