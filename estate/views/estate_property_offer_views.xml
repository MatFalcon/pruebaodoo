<?xml version="1.0" ?>
<odoo>
    <record id="estate_offer_view" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Estate Offer" editable="bottom" decoration-success="status=='accepted'" decoration-danger="status=='rejected'">
                <field name="price"/>
                <field name="status" invisible="1"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <field name="create_date"/>
                <button name="action_accept_offer" type="object" icon="fa-check" string="Accept" invisible="status"/>
                <button name="action_refuse_offer" type="object" icon="fa-times" string="Refuse" invisible="status"/>
            </tree>
        </field>
    </record>
</odoo>
