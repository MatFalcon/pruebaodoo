<?xml version="1.0" ?>
<odoo>
    <record id="estate_offer_view" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Estate Offer">
                <field name="price"/>
                <field name="status"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <field name="create_date"/>
                <button name="action_accept_offer" type="object" icon="fa-check" string="Accept"/>
                <button name="action_refuse_offer" type="object" icon="fa-times" string="Refuse"/>
            </tree>
        </field>
    </record>
    <record id="estate_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Form">
                <sheet>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="status"/>
                            <field name="partner_id"/>
                            <field name="property_id"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
