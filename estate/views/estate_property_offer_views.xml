<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_properties_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Tag">
                <group>
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                    <field name="status" />
                </group>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Tags" editable="bottom" decoration-danger="status == 'refused'" decoration-success="status == 'accepted'">
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_accept" string="Accept" type="object" icon="fa-check"
                    invisible="status" />
                <button name="action_refuse" string="Refuse" type="object" icon="fa-times"
                    invisible="status" />
                <field name="status" />
            </tree>
        </field>
    </record>
</odoo>