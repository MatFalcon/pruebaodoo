<?xml version="1.0"?>
<odoo>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offer">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_confirm" title="Accept" type="object" icon="fa-check"/>
                <button name="action_reject" title="Reject" type="object" icon="fa-times"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Real Estate Offer">
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="property_id" class="mb16"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="status"/>
                            <field name="partner_id"/>
                            <field name="price"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
