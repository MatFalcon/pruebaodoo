<?xml version="1.0"?>
<odoo>
    <record id="estate_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="price" string="Price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="estate_offer_accept" icon="fa-check" type="object" string="Accept"/>
                <button name="estate_offer_refuse" icon="fa-times" type="object" string="Refuse"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="estate_offer_view_form" model="ir.ui.view">
        <field name="name">estate.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Offer">
                <sheet>
                    <group>
                        <field name="price" string="Price"/>
                        <newline/>
                        <field name="partner_id" string="Partner"/>
                        <newline/>
                        <field name="validity"/>
                        <newline/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>