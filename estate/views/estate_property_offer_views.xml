<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Properties Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="context">{'default_event_id': active_id}</field>
    </record>

    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>

        <field name="arch" type="xml">
            <tree string="Offer" create="property_id.state == 'offer_accepted'" editable="bottom"
                decoration-danger="status == 'refused'"
                decoration-success="status == 'accepted'"
            >
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <field name="property_type_id" />
                <button name="action_offer_accepted" type="object" icon="fa-check" title="accept"
                    invisible="status == 'accepted'" />
                <button name="action_offer_refused" type="object" icon="fa-close" title="refuse"
                    invisible="status == 'refused'" />
                <field name="status" optional="hide" />
            </tree>
        </field>
    </record>
</odoo>