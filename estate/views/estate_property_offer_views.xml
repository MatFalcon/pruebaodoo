<?xml version="1.0"?>
<odoo>
    <record id="action_open_estate_properties_offer" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Estate Property Offer" editable="bottom" 
                decoration-success="status in ['accepted']" 
                decoration-danger="status in ['refused']"
            >
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity" string="Validity (days)"/>
                <field name="date_deadline"/>
                <button name="action_accept" title="Accept Offer" type="object" icon="fa-check" invisible="status in ['accepted', 'refused']"/>
                <button name="action_refuse" title="Refuse Offer" type="object" icon="fa-close" invisible="status in ['accepted', 'refused']"/>
                <field name="status" column_invisible="true"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
