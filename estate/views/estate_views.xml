<?xml version="1.0"?>
<odoo>
    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" decoration-success="offer_ids" decoration-bf="state == 'offer_accepted'" 
                decoration-muted="state == 'sold'">
                <field name="offer_ids" column_invisible="1"/>
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From" optional="True"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate">
                <header>
                    <button name="estate_sold" string="Sold" type="object" invisible="state in ('offer_accepted', 'sold')"/>
                    <button name="estate_sold" string="Sold" type="object" invisible="state != 'offer_accepted'" 
                    class="oe_highlight"/>
                    <button name="estate_cancel" string="Cancel" type="object" invisible="state == 'sold'"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <h1 class="mb32">
                        <field name="name"/>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <group>
                        <group>
                            <field name="property_type_id" string="Property Type" widget="many2one" options="{'no_create': true}"/>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="date_availability" string="Available From"/>
                            <field name="selling_price"/>
                            <field name="best_price" string="Best Offer"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" string="Garden Area (sqm)" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="active"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ('offer_accepted', 'sold', 'canceled')"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id"/>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_view_search" model="ir.ui.view">
        <field name="name">estate.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate search">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)" filter_domain="[('living_area', '&lt;=', self)]"/>
                <field name="facades" string="Facades"/>
                <filter string="Available" name="state" domain="[('state', 'in', ('new', 'offer_received'))]"/>
                <group expand="0" string="Group By">
                    <filter string="PostCode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_view_kanban" model="ir.ui.view">
        <field name="name">estate.kaban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="False">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <field name="name"/>
                            </div>
                            <div>
                                <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_received'">
                                <field name="best_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_accepted'">
                                <field name="selling_price"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_state': True}</field>
    </record>
</odoo>