<?xml version="1.0"?>
<odoo>
    <template id="property_page" name="Properties Page">
        <t t-call="website.layout">
            <div class="container">
                <h1>Available Properties</h1>
                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4">
                            <div class="card">
                            <a t-att-href="'/property/' + str(property.id)" title="View Property">
                                <img src="/estate/static/description/icon.png" class="card-img-top" alt="property image"/>
                            </a>
                                <div class="card-body">
                                    <h5 class="card-title"><t t-esc="property.name"/></h5>
                                    <p class="card-text"><t t-esc="property.expected_price"/></p>
                                    <p class="card-text"><strong>Price:</strong> <t t-esc="property.selling_price"/> USD</p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
