<?xml version="1.0"?>
<odoo>
    <record id="view_estate_offer_wizard_form" model="ir.ui.view">
        <field name="name">wizard.offer.form</field>
        <field name="model">wizard.offer</field>
        <field name="arch" type="xml">
            <form string="Add Offer">
                <group>
                    <field name="partner_id"/>
                    <field name="price"/>
                    <field name="date_deadline"/>
                </group>
                <footer>
                    <button string="Make an Offer" type="object" name="action_add_offer" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_offer_views" model="ir.actions.act_window">
        <field name="name">Add Offer Wizard</field>
        <field name="res_model">wizard.offer</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_estate_offer_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{'active_ids': active_ids}</field>
    </record>
</odoo>
