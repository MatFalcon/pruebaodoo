<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="property_detail_template" name="Property Detail">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-8">
                        <img t-att-src="'/estate/static/description/dcba.jpeg'" class="img-fluid mb-4"/>
                        <h2><t t-esc="property.name"/></h2>
                        <p><t t-esc="property.description"/></p>
                    </div>
                    <div class="col-md-4">
                        <h3>Property Details</h3>
                        <ul class="list-group">
                            <li class="list-group-item list-group-item-primary"><strong>Bedrooms:</strong> <t t-esc="property.bedrooms"/></li>
                            <li class="list-group-item list-group-item-secondary"><strong>Living Area:</strong> <t t-esc="property.living_area"/> sq. ft.</li>
                            <li class="list-group-item list-group-item-success"><strong>Facades:</strong> <t t-esc="property.facades"/></li>
                            <li class="list-group-item list-group-item-danger"><strong>Garage:</strong> <t t-esc="'Yes' if property.garage else 'No'"/></li>
                            <li class="list-group-item list-group-item-warning"><strong>Garden:</strong> <t t-esc="'Yes' if property.garden else 'No'"/></li>
                            <li class="list-group-item list-group-item-info"><strong>Garden Area:</strong> <t t-esc="property.garden_area"/> sq. ft.</li>
                            <li class="list-group-item list-group-item-light"><strong>Garden Orientation:</strong> <t t-esc="property.garden_orientation"/></li>
                        </ul>
                        <h3 class="mt-4">Price</h3>
                        <p><strong>Expected Price:</strong> $<t t-esc="property.expected_price"/></p>
                        <p><strong>Selling Price:</strong> $<t t-esc="property.selling_price" t-if="property.selling_price"/></p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
