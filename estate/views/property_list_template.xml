<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="property_list_template" name="Property List">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <img t-att-src="'/estate/static/description/dcba.jpeg'" class="card-img-top"/>
                                <div class="card-body">
                                    <h5 class="card-title"><t t-esc="property.name"/></h5>
                                    <p class="card-text"><t t-esc="property.description"/>...</p>
                                    <a t-att-href="'/property/%d' % property.id" class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                <div class="row">
                    <div class="col-12">
                        <t t-call="website.pager" t-if="pager['page_count'] > 1">
                            <t t-set="pager_url" t-value="'/properties'"/>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
