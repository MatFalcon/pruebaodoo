<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="House Tree View"
                  decoration-muted="state == 'sold'"
                  decoration-danger="state == 'canceled'"
                  decoration-bf="state == 'offer_accepted'"
                  decoration-success="state in ['offer_accepted', 'offer_received']">
                <field name="state" invisible="1"/>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="total_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban string="House Kanban View" default_group_by="property_type_id">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <br/>
                            <div class="text-muted">Expected price: <field name="expected_price"/></div>
                            <t t-if="record.best_price.raw_value"><div class="text-muted">Best Offer: <field name="best_price"/></div></t>
                            <t t-if="record.selling_price.raw_value"><div class="text-muted">Selling Price: <field name="selling_price"/></div></t>
                            <div><field name="property_tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="House Search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '&gt;=', self)]"/>
                <field name="facades"/>
                <separator/>
                <filter string="Available" name="available" domain="[('state', 'in', ('new', 'offer_received'))]"/>
                <separator/>
                <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                <filter string="Salesperson" name="salesperson" context="{'group_by':'salesperson_id'}"/>
            </search>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="House Form">
                <header>
                    <button name="action_set_sold" type="object" string="Sold" invisible="state in ['sold', 'canceled']"/>
                    <button name="action_set_canceled" type="object" string="Cancel"  invisible="state in ['sold', 'canceled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <div class="oe_title mb32">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="property_tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                    </div>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create':true}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="best_price"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <div class="mb32"/>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ['offer_accepted', 'sold', 'canceled']"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                                <field name="state"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_available': True, 'search_default_current': True}</field>
    </record>

</odoo>
