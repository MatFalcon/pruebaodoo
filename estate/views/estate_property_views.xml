<?xml version="1.0"?>
<odoo>
    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From"/>
            </tree>
        </field>
    </record>

    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate">
                <sheet>
                    <h1 class="mb32"><field name="name"/></h1>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <div>
                        <group>
                            <group>
                                <field name="postcode"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="date_availability" string="Available From"/>
                            </group>
                            <group>
                                <field name="selling_price"/>
                            </group>
                        </group>
                    </div>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <newline/>
                                <field name="bedrooms"/>
                                <newline/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <newline/>
                                <field name="facades"/>
                                <newline/>
                                <field name="garage"/>
                                <newline/>
                                <field name="garden"/>
                                <newline/>
                                <field name="garden_area" string="Garden Area (sqm)"/>
                                <newline/>
                                <field name="garden_orientation"/>
                                <newline/>
                                <field name="active"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id"/>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_model_search" model="ir.ui.view">
        <field name="name">estate.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="facades" string="Facades"/>
                <filter string="Available" name="state" domain="['|', ('state', '=', 'N'), ('state', '=', 'OR')]"/>
                <group expand="1" string="Group By">
                    <filter string="PostCode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>