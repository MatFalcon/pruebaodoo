<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Property Tree">
                <field name="name"/>
                <field name="state"/>
                <field name="property_tag_ids"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <sheet>
                    <h1>

                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="property_tag_ids" widget="many2many_tags" string=""/>
                            <field name="property_type_id"/>
                        </group>
                        <group>
                            <field name="buyer_id"/>
                            <field name="salesman_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Properties">
                            <group>
                                <field name="description" string="Description">label</field>
                            
                                <field name="bedrooms" string="Bedrooms"/>
    
                                <field name="living_area" string="Living Area (sq. ft)"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage"/>
                                <field name="garden" string="Garden"/>
                                <field name="garden_area" string="Garden Area (sq. ft)"/>
                                <field name="garden_orientation" string="Garden Orientation"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" string=""/>
                            </group>
                        </page>
                        <page string="Droperties">

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Look up property...">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garden"/>

                <filter string="Include archived" name="archived" domain="['|', ('active', '=', True), ('active', '=', False)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>

                <filter name="available_properties" string="Available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter name="group_postcodes" string="Group by postcode" context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>



</odoo>
