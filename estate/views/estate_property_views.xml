<?xml version="1.0"?>
<odoo>
    <record id="action_estate_property_views" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="property_type_id"/>
                <field name="tag_ids"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <sheet>
                    <group>
                        <group>
                            <h1 style="width:500px"><field name="name" string="Title" default="New Property"/></h1>
                        </group>
                        <separator/>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <separator/>
                    <notebook>
                        <page string="Description">
                            <group style="width:300px">
                                <field name="description" style="width:500px"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="property_type_id"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group style="width:300px">
                                <field name="buyer"/>
                                <field name="sales_person"/>
                            </group>
                        </page>
                        <page string="Offers">
                                <field name="offer_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <field name="tag_ids"/>
                <filter name="Bedrooms less than 3" domain="[('bedrooms', '&lt;', 3)]"/>
                <group>
                    <filter string="Postcode" name="postcode_category" context="{'group_by': 'postcode'}"/>
                    <filter string="Property Type" name="property_type_id" context="{'group_by': 'property_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
