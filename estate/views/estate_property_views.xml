<?xml version="1.0"?>
<odoo>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Property">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <separator />
                    <field name="tag_ids" widget="many2many_tags"/>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                            <field name="best_offer_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="total_area"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="user_id"/>
                                    <field name="partner_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <filter string="Available" name="state" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    <filter string="Property Types" name="property_type_id" context="{'group_by':'property_type_id'}"/>
                    <filter string="Salesman" name="user_id" context="{'group_by':'user_id'}"/>
                    <filter string="Buyer" name="partner_id" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
