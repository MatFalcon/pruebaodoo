<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    
    <!-- Actions -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="context">{'search_default_available': True}</field>
        <field name="view_mode">tree,form</field>
         <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new property
                </p><p>
                    List a new property and details using the new button.
                </p>
            </field>
    </record>

   
    <!-- Estate Property Tree View -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" 
            decoration-success="state in ['offer_accepted', 'offer_recieved']"
            decoration-bf="state in ['offer_accepted']"
            decoration-muted="state in ['sold']">
                <field name="title"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="postcode"/>
                <field name="availability_date" optional="hide"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="state"/>
                <field name="property_type_id"/>
                <field name="seller_id"/>
                <field name="buyer_id"/>
            </tree>
        </field>
    </record>

  
     <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate property">
                <header>
                    <button name="action_sold" type="object" string="Sell" invisible="state in ['sold','canceled']"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ['sold','canceled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="new, offer_received, offer_accepted, sold" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                        <group>
                            <group>
                               <h1 style="width:200px"> <field name="title"/> </h1>
                            </group>
                            <seperator/>
                            <group>
                                <group>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                                    <field name="postcode"/>
                                    <field name="availability_date" />
                                </group>
                                <group>
                                    <field name="expected_price"/>
                                    <field name="property_type_id" options="{'no_create':true,'no_create_edit':true }" />
                                    <field name="selling_price"/>
                                </group>
                            </group>
                        </group>
                        <seperator/>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="garden_orientation" invisible="not garden"/>
                                    <field name="active"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Offers">
                                    <field name="offer_ids" readonly="state in ['offer_accepted', 'sold', 'offer_refused']"/>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="state"/>
                                    <field name="buyer_id"/>
                                    <field name="seller_id"/>
                                </group>
                            </page>
                            
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                            <field name="message_follower_ids" />
                            <field name="message_ids" />
                            <field name="activity_ids" />
                    </div>
            </form>
        </field>
    </record>

        <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">    
            <search string="search">
                <field name="title"/>
                <field name="postcode"/>
                <field name="availability_date"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="state"/>
                <field name="seller_id"/>
                <field name="buyer_id"/>
                <filter name="available" string="Available" domain="[('state', '!=', 'sold'), ('state', '!=', 'canceled')]"/>
                <filter string="Applied Filter" name="Applied filter" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_recieved')]"/>
                <group>
                    <filter string="postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
 
</odoo>
