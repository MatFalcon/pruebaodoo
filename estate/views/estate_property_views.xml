<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{ 'search_default_available_properties':True}</field>

    
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Property Tree">
                <field name="name"/>
                <field name="status"/>
                <field name="property_tag_ids"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="True"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <header>
                    <button name="action_cancel" type="object" string="Cancel" invisible="status=='sold' or status=='cancelled'"/>
                    <button name="action_is_sold" type="object" string="Mark as sold" invisible="status=='sold' or status=='cancelled'"/>
                    <field name="status" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <h1>

                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="property_tag_ids" widget="many2many_tags" string="" options="{'color_field': 'color'}"/>
                            <field name="property_type_id" options="{'no_create':true}"/>
                        </group>
                        <group>
                            <field name="buyer_id"/>
                            <field name="salesman_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                            <field name="total_area"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Properties">
                            <group>
                                <field name="description" string="Description">label</field>
                            
                                <field name="bedrooms" string="Bedrooms"/>
    
                                <field name="living_area" string="Living Area (sq. ft)"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage"/>
                                <field name="garden" string="Garden"/>
                                <field name="garden_area" string="Garden Area (sq. ft)" invisible="not garden"/>
                                <field name="garden_orientation" string="Garden Orientation" invisible="not garden"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" string="" readonly="status=='offer_accepted' or status=='sold' or status=='cancelled'"/>
                            </group>
                        </page>
                        <page string="Droperties">

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Look up property..." >
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '&gt;=', self)]"/>
                <field name="facades"/>
                <field name="garden"/>

                <filter string="Include archived" name="archived" domain="['|', ('active', '=', True), ('active', '=', False)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>

                <filter name="available_properties" string="Available" domain="['|', ('status', '=', 'new'), ('status', '=', 'offer_received')]"/>
                <filter name="group_postcodes" string="Group by postcode" context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>



</odoo>
