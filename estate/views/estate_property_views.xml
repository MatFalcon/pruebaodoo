<?xml version="1.0"?>
<odoo>

    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_type_model_action" model="ir.actions.act_window">
        <field name="name">Types</field>
        <field name="res_model">estate.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_tag_model_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">estate.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_tag_model_view_tree" model="ir.ui.view">
        <field name="name">estate.tag.tree</field>
        <field name="model">estate.tag</field>
        <field name="arch" type="xml">
            <tree string="Tags">
                <field name="tag"/>
            </tree>
        </field>
    </record>

    <record id="estate_type_model_view_tree" model="ir.ui.view">
        <field name="name">estate.type.tree</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <tree string="Types">
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record id="estate_model_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="state"/>
                <field name="property_type_id"/>
            </tree>
        </field>
    </record>

    <record id="estate_model_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="New Real Estate">
                <sheet>
                    <header>
                        <button name="sold" type="object" string="Sold"/>
                        <button name="cancel" type="object" string="Cancel"/>
                    </header>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="property_tags_ids" widget="many2many_tags"/>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="state"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="garden_area"/>
                                <field name="living_area"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids">
                                <tree string="Properties">
                                    <field name="price"/>
                                    <field name="status"/>
                                    <field name="create_date"/>
                                    <field name="validity"/>
                                    <button name="action_accept" type="object" title="Accept" icon="fa-check"/>
                                    <button name="action_reject" type="object" title="Reject" icon="fa-times"/>
                                    <field name="date_deadline"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="buyer_id"/>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="estate_model_view_search" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Real Estate">
                <field name="name" string="Name"/>
                <field name="description" string="Description"/>
                <field name="bedrooms" string="bedrooms"/>
                <field name="living_area" string="living area"/>
                <field name="facades" string="Facades"/>
                <field name="expected_price" string="Expected Price"/>
                <separator/>
                <filter string="Availability" name="state"
                        domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode"
                            context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
