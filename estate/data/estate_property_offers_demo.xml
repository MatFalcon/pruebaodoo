<?xml version="1.0"?>
<odoo>
    <record id="azure_interior_10k" model="estate.property.offer">
        <field name="property_id" ref="property_big_villa"></field>
        <field name="price">10000.00</field>
        <field name="partner_id" ref="base.res_partner_12"></field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="DateTime.now() + relativedelta(days=14)"></field>
    </record>
    <record id="azure_interior_15M" model="estate.property.offer">
        <field name="property_id" ref="property_big_villa"></field>
        <field name="price">1500000.00</field>
        <field name="partner_id" ref="base.res_partner_12"></field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="DateTime.now() + relativedelta(days=14)"></field>
    </record>
    <record id="deco_addict_15M" model="estate.property.offer">
        <field name="property_id" ref="property_big_villa"></field>
        <field name="price">1500001.00</field>
        <field name="partner_id" ref="base.res_partner_2"></field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="DateTime.now() + relativedelta(days=14)"></field>
    </record> 
    <function model="estate.property.offer" name="action_accept_button">
        <value eval="[ref('deco_addict_15M')]"/>
    </function>
    <function model="estate.property.offer" name="action_refuse_button">
        <value eval="[ref('azure_interior_15M')]"/>
    </function>
    <function model="estate.property.offer" name="action_refuse_button">
        <value eval="[ref('azure_interior_10k')]"/>
    </function>
</odoo>