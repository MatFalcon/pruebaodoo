<?xml version="1.0"?>
<odoo>
    <record id="view_estate_property_offer_wizard_form" model="ir.ui.view">
        <field name="name">estate.property.offer.wizard.form</field>
        <field name="model">estate.property.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Estate Property Tag">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="offer_status"/>
                        <field name="buyer_id"/>
                    </group>
                    <footer>
                        <button name="add_offer_action" type="object" string="Make Offer" class="btn-primary" />
                        <button string="Cancel" special="cancel" class="btn-secondary" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_estate_property_offer_wizard_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.wizard.tree</field>
        <field name="model">estate.property.offer.wizard</field>
        <field name="arch" type="xml">
            <tree string="Property Offers">
                <field name="price" />
                <field name="offer_status" />
                <field name="buyer_id" />
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_wizard_button" model="ir.actions.act_window">
        <field name="name">Offer</field>
        <field name="res_model">estate.property.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_estate_property_offer_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>