<odoo>
    <record id = "add_offer_wizard_form" model="ir.ui.view">
        <field name="name">add.offer.wizard.form</field>
        <field name="model">estate.add.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Offer">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="status"/>
                        <field name="buyer_id"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Make an Offer" type="object" name="add_offer" class="btn btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="add_offer_wizard_action" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">estate.add.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="add_offer_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
