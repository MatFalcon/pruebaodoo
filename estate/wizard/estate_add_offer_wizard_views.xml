<odoo>
    <record id="view_estate_add_offer_wizard" model="ir.ui.view">
        <field name="name">estate.add.offer.wizard.form</field>
        <field name="model">estate.add.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Offer">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="date_deadline"/>
                </group>
                <footer>
                    <button string="Make an Offer" type="object" name="action_add_offers" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_estate_add_offer_wizard" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">estate.add.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'active_ids': active_ids}</field>
    </record>
</odoo>
