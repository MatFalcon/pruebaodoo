<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_offers_table">
            <table class="table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Buyer </th>
                        <th>Validity </th>
                        <th>Deadline </th>
                        <th>state </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="offers" t-value="property.mapped('offer_id')"/>
                    <t t-if="offers">
                        <tr t-foreach="offers" t-as="offer">
                            <td>
                                <span t-field="offer.price"/>
                            </td>
                            <td>
                                <span t-field="offer.partner_id"/>
                            </td>
                            <td>
                                <span t-field="offer.validity"/>
                            </td>
                            <td>
                                <span t-field="offer.deadline"/>
                            </td>
                            <td>
                                <span t-field="offer.status"/>
                            </td>
                        </tr>
                    </t>
                    <t t-else="">
                        <p>No Offer made</p>
                    </t>
                </tbody>
            </table>
    </template>

    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>SalesMen: </strong>
                            <span t-field="property.seller_id"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div class="invoice">
                            <strong>State: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <t t-call="estate.report_property_offers_table"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
 
    <template id="report_user_property_offers">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="user">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <strong t-field="user.name"/>
                        </h1>
                        <t t-foreach="user.property_ids" t-as="property">
                            <h2>
                                <span t-field="property.name"/>
                            </h2>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                            </div>
                            <div>
                                <strong>Status: </strong>
                                <span t-field="property.state"/>
                            </div>
                            <t t-call="estate.report_property_offers_table"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
