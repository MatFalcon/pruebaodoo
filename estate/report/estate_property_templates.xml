<?xml version="1.0"?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Salesman:</strong>
                            <span t-field="property.user_id"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                            <strong>Status:</strong>
                            <span t-field="property.state"/>
                        </div>
                        <div class="invoice_offer">
                            <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                            <t t-if="offers">
                        <t t-call="estate.estate_property_offer_template"/>
                            </t>
                            <t t-else="">
                                <p>No offers yet</p>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_user_property_offers">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="user">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <strong t-field="user.name"/>
                        </h1>
                        <t t-foreach="user.property_ids" t-as="property">
                            <h2>
                                <span t-field="property.name"/>
                            </h2>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                            </div>
                            <div>
                                <strong>Status: </strong>
                                <span t-field="property.state"/>
                            </div>
                            <t t-call="estate.estate_property_offer_template"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
