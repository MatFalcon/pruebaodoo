<?xml version="1.0"?>
<odoo>
    <record id="action_tracking_stages_views" model="ir.actions.act_window">
        <field name="name">Tracking Stages</field>
        <field name="res_model">freight.tracking.stages</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="tracking_stages_view_tree" model="ir.ui.view">
        <field name="name">tracking.stages.tree</field>
        <field name="model">freight.tracking.stages</field>
        <field name="arch" type="xml">
            <tree string="Tracking Stages">
                <field name="code"/>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="tracking_stagesview_form" model="ir.ui.view">
        <field name="name">tracking.stages.form</field>
        <field name="model">freight.tracking.stages</field>
        <field name="arch" type="xml">
            <form string="Tracking Stages">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="status" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
