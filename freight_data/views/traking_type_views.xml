<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_traking_type_tree" model="ir.ui.view">
        <field name="name">traking.type.tree</field>
        <field name="model">traking.type</field>
        <field name="arch" type="xml">
            <tree string="tracking stages">
                <field name="code"/>
                <field name="name"/>
                <field name="status" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_traking_type_form" model="ir.ui.view">
        <field name="name">traking.type.form</field>
        <field name="model">traking.type</field>
        <field name="arch" type="xml">
            <form string="traking stages">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="status" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_traking_stages" model="ir.actions.act_window">
            <field name="name">Traking Stages</field>
            <field name="res_model">traking.type</field>
            <field name="view_mode">tree,form</field>
    </record>
</odoo>
