<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_container_type_tree" model="ir.ui.view">
        <field name="name">container.type.tree</field>
        <field name="model">container.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="size"/>
                <field name="volume"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <record id="view_container_type_form" model="ir.ui.view">
        <field name="name">container.type.form</field>
        <field name="model">container.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="is_type"/>
                        <field name="size"/>
                        <field name="volume"/>
                        <field name="status" statusbar_visible='true' widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_container_type_search" model="ir.ui.view">
        <field name="name">container.type.search</field>
        <field name="model">container.type</field>
        <field name="arch" type="xml">
            <search string="Search Container Types">
                <filter string="Active" name="active" domain="[('status', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('status', '=', False)]"/>
            </search>
        </field>
    </record>
    <record id="action_container_type" model="ir.actions.act_window">
        <field name="name">Container Type</field>
        <field name="res_model">container.type</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_container_type_search"/>
    </record>
</odoo>
