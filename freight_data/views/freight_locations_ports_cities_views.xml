<?xml version="1.0"?>
<odoo>
    <record id="action_ports_cities_views" model="ir.actions.act_window">
        <field name="name">Ports and Cities</field>
        <field name="res_model">freight.ports.cities</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="ports_cities_view_tree" model="ir.ui.view">
        <field name="name">ports.cities.tree</field>
        <field name="model">freight.ports.cities</field>
        <field name="arch" type="xml">
            <tree string="Ports and Cities">
                <field name="code"/>
                <field name="name"/>
                <field name="country"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="ports_cities_view_form" model="ir.ui.view">
        <field name="name">ports.cities.form</field>
        <field name="model">freight.ports.cities</field>
        <field name="arch" type="xml">
            <form string="Ports and Cities">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="country"/>
                        </group>
                        <group>
                            <field name="status" widget="boolean_toggle"/>
                            <field name="is_options" widget="many2many_checkboxes"/>
                            <field name="display_name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ports_cities_view_search" model="ir.ui.view">
        <field name="name">ports.cities.search</field>
        <field name="model">freight.ports.cities</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="status"/>
                <field name="is_options"/>
                <filter name="sea" string="Sea" domain="[('is_options.name', 'in', ['Sea'])]"/>
                <filter name="air" string="Air" domain="[('is_options.name', 'in', ['Air'])]"/>
                <filter name="inland" string="Inland" domain="[('is_options.name', 'in', ['Inland'])]"/>
                <filter name="active" string="Active" domain="[('status', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('status', '=', False)]"/>
                <group>
                    <filter string="Country" name="country_category" context="{'group_by': 'country'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
