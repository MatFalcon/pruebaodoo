<?xml version="1.0"?>
<odoo>
    <record id="action_commodity_group_views" model="ir.actions.act_window">
        <field name="name">Commodity Group</field>
        <field name="res_model">freight.commodity.group</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="commodity_group_view_tree" model="ir.ui.view">
        <field name="name">commodity.group.tree</field>
        <field name="model">freight.commodity.group</field>
        <field name="arch" type="xml">
            <tree string="Commodity Group">
                <field name="code"/>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="commodity_group_view_form" model="ir.ui.view">
        <field name="name">commodity.group.form</field>
        <field name="model">freight.commodity.group</field>
        <field name="arch" type="xml">
            <form string="Commodity Group">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="status" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
