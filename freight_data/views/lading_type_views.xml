<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_lading_type_tree" model="ir.ui.view">
        <field name="name">lading.type.tree</field>
        <field name="model">lading.type</field>
        <field name="arch" type="xml">
            <tree string="Lading Type">
                <field name="code"/>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_lading_type_form" model="ir.ui.view">
        <field name="name">lading.type.form</field>
        <field name="model">lading.type</field>
        <field name="arch" type="xml">
            <form string="Container Type Form">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="status" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_lading_type" model="ir.actions.act_window">
        <field name="name">Lading Type</field>
        <field name="res_model">lading.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
