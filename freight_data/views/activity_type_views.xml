<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_activity_type_tree" model="ir.ui.view">
        <field name="name">activity.type.tree</field>
        <field name="model">activity.type</field>
        <field name="arch" type="xml">
            <tree string="Freight Tags Tree">
                <field name="code"/>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

     <record id="view_activity_type_form" model="ir.ui.view">
        <field name="name">activity_type.form</field>
        <field name="model">activity_type</field>
        <field name="arch" type="xml">
            <form string="Freight Tags Form">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="status" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_activity_type_tags" model="ir.actions.act_window">
        <field name="name">Activity Type</field>
        <field name="res_model">activity.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
