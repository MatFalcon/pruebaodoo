<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_tracking_stages_tree" model="ir.ui.view">
        <field name="name">tracking.stages.tree</field>
        <field name="model">tracking.stages</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <record id="view_tracking_stages_form" model="ir.ui.view">
        <field name="name">tracking.stages.form</field>
        <field name="model">tracking.stages</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="status" statusbar_visible='true' widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_tracking_stages" model="ir.actions.act_window">
        <field name="name">Tracking Stages</field>
        <field name="res_model">tracking.stages</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_tracking_stages_tree"/>
    </record>
</odoo>
