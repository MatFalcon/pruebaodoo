<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_ocean_shipments_scope_tree" model="ir.ui.view">
        <field name="name">ocean.shipments.scope.tree</field>
        <field name="model">ocean.shipments.scope</field>
        <field name="arch" type="xml">
            <tree string="Channel" multi_edit="1">
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_ocean_shipments_scope_form" model="ir.ui.view">
        <field name="name">ocean.shipments.scope.form</field>
        <field name="model">ocean.shipments.scope</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_ocean_shipments_scope" model="ir.actions.act_window">
        <field name="name">Ocean Shipments Scope</field>
        <field name="res_model">ocean.shipments.scope</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
