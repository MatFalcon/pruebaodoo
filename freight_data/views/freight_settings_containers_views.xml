<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_containers_tree" model="ir.ui.view">
        <field name="name">containers.tree</field>
        <field name="model">containers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="container_number"/>
                <field name="container_type_id"/>
                <field name="container_owner_id"/>
                <field name="tare_weight"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <record id="view_containers_form" model="ir.ui.view">
        <field name="name">containers.form</field>
        <field name="model">containers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="container_number"/>
                        <field name="container_type_id"/>
                        <field name="is_type"/>
                        <field name="container_owner_id"/>
                        <field name="tare_weight"/>
                        <field name="max_load"/>
                        <field name="status" statusbar_visible='true' widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_containers_search" model="ir.ui.view">
        <field name="name">containers.search</field>
        <field name="model">containers</field>
        <field name="arch" type="xml">
            <search string="Search Containers">
                <field name="container_number" string="Container Number"/>
                <field name="tare_weight" string="Tare Weight (KG)"/>
                <filter string="Active" name="active" domain="[('status', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('status', '=', False)]"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="Container Owner" name="container_owner" context="{'group_by': 'container_owner_id'}"/>
                    <filter string="Container Type" name="container_type" context="{'group_by': 'container_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_containers" model="ir.actions.act_window">
        <field name="name">Containers</field>
        <field name="res_model">containers</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_containers_search"/>
    </record>
</odoo>
