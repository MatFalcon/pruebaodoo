<?xml version="1.0"?>
<odoo>
    <record id="action_vessels_views" model="ir.actions.act_window">
        <field name="name">Vessels</field>
        <field name="res_model">freight.vessels</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="vessels_view_tree" model="ir.ui.view">
        <field name="name">vessels.tree</field>
        <field name="model">freight.vessels</field>
        <field name="arch" type="xml">
            <tree string="Freight Vessels">
                <field name="code"/>
                <field name="name"/>
                <field name="vessel_owner_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="vessels_view_form" model="ir.ui.view">
        <field name="name">vessels.form</field>
        <field name="model">freight.vessels</field>
        <field name="arch" type="xml">
            <form string="Vessels">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="status" widget="boolean_toggle"/>
                            <field name="vessel_owner_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="vessels_view_search" model="ir.ui.view">
        <field name="name">vessels.search</field>
        <field name="model">freight.vessels</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="status"/>
                <filter name="active" string="Active" domain="[('status', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('status', '=', False)]"/>
                <group>
                    <filter string="Vessel Owner" name="vessel_owner_category" context="{'group_by': 'vessel_owner_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
