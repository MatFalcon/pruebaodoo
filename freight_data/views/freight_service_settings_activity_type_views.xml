<?xml version="1.0"?>
<odoo>
    <record id="action_activity_types_views" model="ir.actions.act_window">
        <field name="name">Activity Types</field>
        <field name="res_model">freight.activity.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="activity_type_view_tree" model="ir.ui.view">
        <field name="name">activity.type.tree</field>
        <field name="model">freight.activity.type</field>
        <field name="arch" type="xml">
            <tree string="Activity Types">
                <field name="code"/>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="activity_type_view_form" model="ir.ui.view">
        <field name="name">activity.type.form</field>
        <field name="model">freight.activity.type</field>
        <field name="arch" type="xml">
            <form string="Activity Types">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="status" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
