<?xml version="1.0"?>
<odoo>
    <record id="action_clearance_type_views" model="ir.actions.act_window">
        <field name="name">Clearance Type</field>
        <field name="res_model">freight.clearance.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="clearance_type_view_tree" model="ir.ui.view">
        <field name="name">clearance.type.tree</field>
        <field name="model">freight.clearance.type</field>
        <field name="arch" type="xml">
            <tree string="Clearance Types">
                <field name="code"/>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="clearance_type_view_form" model="ir.ui.view">
        <field name="name">clearance.type.form</field>
        <field name="model">freight.clearance.type</field>
        <field name="arch" type="xml">
            <form string="Clearance Types">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="status" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
