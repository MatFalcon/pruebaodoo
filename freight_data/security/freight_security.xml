<?xml version="1.0"?>
<odoo>
    <record id="base.module_category_services_freight_md" model="ir.module.category">
        <field name="description">Helps you manage your projects and tasks by tracking them, generating plannings, etc...</field>
        <field name="sequence">4</field>
    </record>

    <record id="freight_group_user" model="res.groups" >
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_services_freight_md"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="freight_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_services_freight_md"/>
        <field name="implied_ids" eval="[(4, ref('freight_group_user'))]"/>
    </record>

    <record id="freight_group_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="base.module_category_services_freight_md"/>
        <field name="implied_ids" eval="[(4, ref('freight_group_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
