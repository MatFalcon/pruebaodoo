<?xml version="1.0"?>
<odoo>
    <record id="action_containers" model="ir.actions.act_window">
        <field name="name">Containers</field>
        <field name="res_model">containers</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_containers_form" model="ir.ui.view">
        <field name="name">containers.form</field>
        <field name="model">containers</field>
        <field name="arch" type="xml">
            <form string="Container">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="container_number"/>
                            <field name="container_type_id"/>
                            <field name="container_type"/>
                            <field name="container_owner_id"/>
                        </group>
                        <group>
                            <field name="tare_weight"/>
                            <field name="max_load"/>
                            <field name="status" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_containers_tree" model="ir.ui.view">
        <field name="name">containers.tree</field>
        <field name="model">containers</field>
        <field name="arch" type="xml">
            <tree string="Container">
                <field name="name" string="Name"/>
                <field name="container_number"/>
                <field name="container_type_id"/>
                <field name="container_owner_id"/>
                <field name="tare_weight"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="containers_view_search" model="ir.ui.view">
        <field name="name">containers.search</field>
        <field name="model">containers</field>
        <field name="arch" type="xml">
            <search string="Search Containers">
                <field name="container_number"/>
                <field name="container_type_id"/>
                <field name="container_owner_id"/>
                <filter name="active" string="Active" domain="[('status', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('status', '=', False)]"/>
                <group string="Group By">
                    <filter name="group_by_container_owner" string="Container Owner" context="{'group_by':'container_owner_id'}"/>
                    <filter name="group_by_container_type" string="Container Type" context="{'group_by':'container_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
