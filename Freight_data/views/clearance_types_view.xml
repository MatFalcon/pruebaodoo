<?xml version="1.0"?>
<odoo>
    <record id="action_clearance_types" model="ir.actions.act_window">
        <field name="name">Clearance Types</field>
        <field name="res_model">clearance.types</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_clearance_types_form" model="ir.ui.view">
        <field name="name">clearance.types.form</field>
        <field name="model">clearance.types</field>
        <field name="arch" type="xml">
            <form string="Clearance Types">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="status" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_clearance_types_tree" model="ir.ui.view">
        <field name="name">clearance.types.tree</field>
        <field name="model">clearance.types</field>
        <field name="arch" type="xml">
            <tree string="Clearance Types">
                <field name="code"/>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_clearance_types_search" model="ir.ui.view">
        <field name="name">clearance.types.search</field>
        <field name="model">clearance.types</field>
        <field name="arch" type="xml">
            <search string="Search Clearance Types">
                <field name="status"/>
                <filter name="active" string="Active" domain="[('status', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('status', '=', False)]"/>
            </search>
        </field>
    </record>
</odoo>
