<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel: {} }" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="() => action.doAction('base.action_partner_form')">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>

            <div class="d-flex gap-3 p-1 flex-wrap" t-if="statistics.loaded">
                <t t-foreach="items" t-as="item" t-key="item.id">
                    <DashboardItem size="item.size || 1">
                        <t t-set="itemProp" t-value="item.props ? item.props(statistics.statistics) : {'data': statistics.statistics}"/>
                        <t t-component="item.Component" t-props="itemProp" />
                    </DashboardItem>
                </t>
            </div>


        </Layout>
    </t>
</templates>