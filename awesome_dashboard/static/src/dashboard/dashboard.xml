<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">

        <Layout 
            display="{controlPanel: {}}"
            className="'o_dashboard h-100'"
        >

            <t t-set-slot="layout-buttons">
                <button class="btn primary-btn" t-on-click="openCustomersKanbanView">Customers</button>
                <button class="btn primary-btn" t-on-click="openCrmLeadsView">Leads</button>
            </t>
            <t t-set-slot="control-panel-additional-actions">
                <button class="btn primary-btn" t-on-click="openConfigurationDialog" >
                    <i class="fa fa-cog"></i>
                </button>
            </t>

            <div>
                <t t-foreach="items" t-as="item" t-key="item.id" >
                    <DashboardItem size="item.size || 1" t-if="!this.state.excludedItemsIds.includes(item.id)" >
                    <t t-set="itemProp" t-value="item.props ? item.props(statistics) : {'data': statistics}"/>
                    <t t-component="item.Component" t-props="itemProp" />
                    </DashboardItem>
                 </t>
            </div>

        </Layout>

    </t>
    <t t-name="awesome_dashboard.ConfigurationDialog">
        <Dialog title="'Dashboard Items Configuration'">

            Which cards do you which to see ?

            <t t-foreach="items" t-as="item" t-key="item.id">
                <CheckBox value="item.enabled" onChange="(ev) => this.onChange(ev, item)">
                    <t t-esc="item.description"/>
                </CheckBox>
            </t>
            <t t-set-slot="footer">
                <button class="btn btn_primary" t-on-click="closeAndUpdateConfiguration">Apply</button>
            </t>

        </Dialog>
    </t>
</templates>
