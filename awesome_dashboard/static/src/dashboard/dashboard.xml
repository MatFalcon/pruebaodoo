<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <header>
            <button class="btn btn-primary" t-on-click="showCustomers">Customers</button>
            <button class="btn btn-primary" t-on-click="showLeads">Leads</button>
        </header>
        <Layout display="{controlPanel: {} }" className="'o_dashboard h-100'">
            <div class="d-flex flex-wrap">
                <DashboardItem>
                    <p style="text-align: center;">Average amount of t-shirt by order this month</p>
                    <div class="dashboard_stats">
                        <t t-esc="stats_proxy.data.average_quantity"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <p style="text-align: center;">Number of new orders this month</p>
                    <div class="dashboard_stats">
                        <t t-esc="stats_proxy.data.nb_new_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <p style="text-align: center;">Total amount of new orders this month</p>
                    <div class="dashboard_stats">
                        <t t-esc="stats_proxy.data.total_amount"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <p style="text-align: center;">Number of cancelled orders this month</p>
                    <div class="dashboard_stats">
                        <t t-esc="stats_proxy.data.nb_cancelled_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <p style="text-align: center;">Average time for an order to go from ‘new’ to ‘sent’ or ‘cancelled’</p>
                    <div class="dashboard_stats">
                        <t t-esc="stats_proxy.data.average_time"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <p style="text-align: center;">Average time for an order to go from ‘new’ to ‘sent’ or ‘cancelled’</p>
                    <PieChart stats_data="stats_proxy.data.orders_by_size"/>
                </DashboardItem>
                
            </div>
        </Layout>
    </t>

</templates>
