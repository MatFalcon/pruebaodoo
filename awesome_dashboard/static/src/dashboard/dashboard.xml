<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout 
            display="{controlPanel: {}}"
            className="'o_dashboard h-100'"
        >
            <t t-set-slot="layout-buttons">
                <button class="btn primary-btn" t-on-click="openCustomersKanbanView">Customers</button>
                <button class="btn primary-btn" t-on-click="openCrmLeadsView">Leads</button>
            </t>
            <div>

                <DashboardItem>
                    <p class="card-title" t-esc="statisticsDescription['average_quantity']"/>
                    <p class="card-text text-success" t-esc="statistics['average_quantity']"/>
                </DashboardItem>

                <DashboardItem>
                    <p class="card-title" t-esc="statisticsDescription['average_time']"/>
                    <p class="card-text text-success" t-esc="statistics['average_time']"/>
                </DashboardItem>

                <DashboardItem>
                    <p class="card-title" t-esc="statisticsDescription['nb_new_orders']"/>
                    <p class="card-text text-success" t-esc="statistics['nb_new_orders']"/>
                </DashboardItem>

                <DashboardItem>
                    <p class="card-title" t-esc="statisticsDescription['nb_cancelled_orders']"/>
                    <p class="card-text text-success" t-esc="statistics['nb_cancelled_orders']"/>
                </DashboardItem>

                <DashboardItem>
                    <p class="card-title" t-esc="statisticsDescription['total_amount']"/>
                    <p class="card-text text-success" t-esc="statistics['total_amount']"/>
                </DashboardItem>

                <DashboardItem t-if="statistics.isReady">
                    <p class="card-title" t-esc="statisticsDescription['orders_by_size']"/>
                    <PieChart data="statistics['orders_by_size']"  label="'Shirt Orders By Size'"/>   
                </DashboardItem>
            </div>
        </Layout>
    </t>
</templates>
