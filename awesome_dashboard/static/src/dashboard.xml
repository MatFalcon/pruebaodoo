<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

	<t t-name="awesome_dashboard.AwesomeDashboard">
		<Layout display="{ controlPanel: {} }" className="'o_dashboard h-100'">
			<t t-set-slot="layout-buttons">
				<button class="btn btn-primary" t-on-click="customersView">Customers</button>
				<button class="btn btn-primary" t-on-click="leadsView">Leads</button>
			</t>
			<t t-foreach="state.showData" t-as="item" t-key="item.id">
				<DashboardItem size="1">
					<p><t t-esc="item.label"/>:</p>
					<div style="color:green;text-align:center;text-bold;font-size:30px">
						<b><t t-esc="item.val"/></b>
					</div>
				</DashboardItem>
			</t>
			<DashboardItem>
				<PieChart data="state.rawData.orders_by_size" size="1"/>
			</DashboardItem>
			<!--			<DashboardItem size="2">
				Some content
			</DashboardItem>
			<DashboardItem>
				Some content
			</DashboardItem>-->
		</Layout>
	</t>

</templates>
