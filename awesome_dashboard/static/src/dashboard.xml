<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="display" className="'o_dashboard h-500'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomerView">Customers</button>
                <button class="btn" t-on-click="openLeads">Leads</button>
            </t>
            <div class="d-flex flex-wrap">
                <DashboardItem>
                    Average amount of t-shirt per order this month
                    <t t-set-slot="number" t-esc="stats.average_quantity"/>
                </DashboardItem>
                <DashboardItem>
                    Average time for an order to go from 'new' to 'sent' or 'cancelled'
                    <t t-set-slot="number" t-esc="stats.average_time"/>
                </DashboardItem>
                <DashboardItem>
                    Number of new orders this month
                    <t t-set-slot="number" t-esc="stats.nb_new_orders"/>
                </DashboardItem>
                <DashboardItem>
                    Number of cancelled orders this month
                    <t t-set-slot="number" t-esc="stats.nb_cancelled_orders"/>
                </DashboardItem>
                <DashboardItem>
                    Total amount of new orders this month
                    <t t-set-slot="number" t-esc="stats.total_amount"/>
                </DashboardItem>
            </div>
        </Layout>
    </t>

</templates>
