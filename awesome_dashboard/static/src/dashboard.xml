<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{ controlPanel: { 'top-right' : false, 'bottom-right': false } }"
                className="'o_dashboard h-100'">

            <t t-set-slot="layout-buttons">
                <button t-on-click="onClickOpenCustomers" class="btn btn-primary">Customers</button>
                <button t-on-click="onClickOpenLeads" class="btn btn-primary">Leads</button>
            </t>

            <div class="d-flex flex-wrap" t-if="this.statistics.isReady">
                <DashboardItem>
                    <div style="d-flex flex-colum">
                        <p>Number of new orders this month</p>
                        <span t-esc="this.statistics.nb_new_orders" class="text-success"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <div style="d-flex flex-colum">
                        <p>Total amount of new orders this month</p>
                        <span t-esc="this.statistics.total_amount" class="text-success"/>
                    </div>
                </DashboardItem>
                <DashboardItem size="1.5">
                    <div style="d-flex flex-colum">
                        <p>Average amount of t-shirt by order this month</p>
                        <span t-esc="this.statistics.average_quantity" class="text-success"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <div style="d-flex flex-colum">
                        <p>Number of cancelled orders this month</p>
                        <span t-esc="this.statistics.nb_cancelled_orders" class="text-success"/>
                    </div>
                </DashboardItem>
                <DashboardItem size="1.75">
                    <div style="d-flex flex-colum">
                        <p>Average time for an order to go from ‘new’ to ‘sent’ or ‘cancelled’</p>
                        <span t-esc="this.statistics.average_time" class="text-success"/>
                    </div>
                </DashboardItem>

            </div>
        </Layout>
    </t>
</templates>
