<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_commodity_group" model="ir.actions.act_window">
        <field name="name">commodity group</field>
        <field name="res_model">configuration.commodity.group</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_commodity_group_tree" model="ir.ui.view">
        <field name="name">configuration.commodity.group.tree</field>
        <field name="model">configuration.commodity.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="status" widget='boolean_toggle'/>
            </tree>
        </field>
    </record>

    <record id="view_commodity_group_form" model="ir.ui.view">
        <field name="name">configuration.commodity.group.form</field>
        <field name="model">configuration.commodity.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="status" widget='boolean_toggle'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>