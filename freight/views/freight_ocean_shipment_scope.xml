<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_freight_ocean_shipment_scope" model="ir.actions.act_window">
        <field name="name">freight ocean shipment scope</field>
        <field name="res_model">freight.ocean.shipment.scope</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_freight_ocean_shipment_scope_tree" model="ir.ui.view">
        <field name="name">freight.ocean.shipment.scope.tree</field>
        <field name="model">freight.ocean.shipment.scope</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_freight_ocean_shipment_scope_form" model="ir.ui.view">
        <field name="name">freight.ocean.shipment.scope.form</field>
        <field name="model">freight.ocean.shipment.scope</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>