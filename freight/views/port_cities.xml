<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_port_cities" model="ir.actions.act_window">
        <field name="name">port cities</field>
        <field name="res_model">port.cities</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_port_city_tree" model="ir.ui.view">
        <field name="name">port.cities.tree</field>
        <field name="model">port.cities</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="country_id"/>
                <!-- <field name="display_name"/> -->
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_port_city_form" model="ir.ui.view">
        <field name="name">port.cities.form</field>
        <field name="model">port.cities</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="country_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="display_name" readonly="1"/>
                    </group>
                    <group>
                        <field name="is_air"/>
                        <field name="is_sea"/>
                        <field name="is_inland"/>
                        <field name="status" widget='boolean_toggle'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_port_city_search" model="ir.ui.view">
        <field name="name">port.cities.search</field>
        <field name="model">port.cities</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Sea" name="sea" domain="[('is_sea', '=', True)]"/>
                <filter string="Air" name="air" domain="[('is_air', '=', True)]"/>
                <filter string="Inland" name="inland" domain="[('is_inland', '=', True)]"/>
                <filter string="Active" name="active" domain="[('status', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('status', '=', False)]"/>

                <group expand="1" string="Group By">
                    <filter string="Country" name="country_id" context="{'group_by': 'country_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>