<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_tracking_stage" model="ir.actions.act_window">
        <field name="name">tracking stage</field>
        <field name="res_model">tracking.stage</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_tracking_stage_tree" model="ir.ui.view">
        <field name="name">tracking.stage.tree</field>
        <field name="model">tracking.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="status" widget='boolean_toggle'/>
            </tree>
        </field>
    </record>

    <record id="view_tracking_stage_form" model="ir.ui.view">
        <field name="name">tracking.stage.form</field>
        <field name="model">tracking.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="status" widget='boolean_toggle'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>