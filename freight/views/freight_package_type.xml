<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_freight_package_type" model="ir.actions.act_window">
        <field name="name">freight package type</field>
        <field name="res_model">freight.package.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_freight_package_type_tree" model="ir.ui.view">
        <field name="name">freight.package.type.tree</field>
        <field name="model">freight.package.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="status" widget='boolean_toggle'/>
            </tree>
        </field>
    </record>

    <record id="view_freight_package_type_form" model="ir.ui.view">
        <field name="name">freight.package.type.form</field>
        <field name="model">freight.package.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="status" widget='boolean_toggle'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_freight_package_type_search" model="ir.ui.view">
        <field name="name">freight.package.type.search</field>
        <field name="model">freight.package.type</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Air" name="air" domain="[('is_air', '=', True)]"/>
                <filter string="LCL" name="lcl" domain="[('is_lcl', '=', True)]"/>
                <filter string="Active" name="active" domain="[('status', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('status', '=', False)]"/>
            </search>
        </field>
    </record>
</odoo>