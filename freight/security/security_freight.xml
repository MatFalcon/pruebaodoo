<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="freight_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_services_freight"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="freight_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_services_freight"/>
        <field name="implied_ids" eval="[(4, ref('freight_group_user'))]"/>
    </record>

    <record id="freight_group_administration" model="res.groups">
        <field name="name">Administration</field>
        <field name="category_id" ref="base.module_category_services_freight"/>
        <field name="implied_ids" eval="[(4, ref('freight_group_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
