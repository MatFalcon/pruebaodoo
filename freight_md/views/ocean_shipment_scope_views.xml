<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ocean_shipment_scope_form" model="ir.ui.view">
        <field name="name">ocean.shipment.scope.form</field>
        <field name="model">ocean.shipment.scope</field>
        <field name="arch" type="xml">
            <form string="Ocean Shipment Scope">
                <sheet>
                    <group>
                        <field name="code" />
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ocean_shipment_scope_tree" model="ir.ui.view">
        <field name="name">ocean.shipment.scope.tree</field>
        <field name="model">ocean.shipment.scope</field>
        <field name="arch" type="xml">
            <tree string="Ocean Shipment Scope" editable="bottom">
                <field name="code" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_ocean_shipment_scope" model="ir.actions.act_window">
        <field name="name">Ocean Shipment Scope</field>
        <field name="res_model">ocean.shipment.scope</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>