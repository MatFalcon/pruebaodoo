<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tracking_stage_form" model="ir.ui.view">
        <field name="name">tracking.stage.form</field>
        <field name="model">tracking.stage</field>
        <field name="arch" type="xml">
            <form string="Tracking Stage">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="status" widget="boolean_toggle" options="{'terminology': 'Tracking Stage'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tracking_stage_tree" model="ir.ui.view">
        <field name="name">tracking.stage.tree</field>
        <field name="model">tracking.stage</field>
        <field name="arch" type="xml">
            <tree string="Tracking Stages">
                <field name="code"/>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_tracking_stage_search" model="ir.ui.view">
        <field name="name">tracking.stage.search</field>
        <field name="model">tracking.stage</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Active" name="filter_active" domain="[('status', '=', True)]"/>
                <filter string="Inactive" name="filter_inactive" domain="[('status', '=', False)]"/>
            </search>
        </field>
    </record>
    <record id="action_tracking_stages" model="ir.actions.act_window">
        <field name="name">Tracking Stages</field>
        <field name="res_model">tracking.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_tracking_stage_tree"/>
        <field name="search_view_id" ref="view_tracking_stage_search"/>
    </record>
</odoo>
