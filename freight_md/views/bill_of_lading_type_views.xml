<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bill_of_lading_type_form" model="ir.ui.view">
        <field name="name">Bill Of Lading Type Form</field>
        <field name="model">bill.of.lading.type</field>
        <field name="arch" type="xml">
            <form string="Bill Of Lading Type">
                <sheet>
                    <group>
                        <field name="code" />
                        <field name="name" />
                        <field name="status" widget='boolean_toggle' />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bill_of_lading_type_tree" model="ir.ui.view">
        <field name="name">Bill Of Lading Type Tree</field>
        <field name="model">bill.of.lading.type</field>
        <field name="arch" type="xml">
            <tree string="Bill Of Lading Type">
                <field name="code" />
                <field name="name" />
                <field name="status" widget='boolean_toggle' />
            </tree>
        </field>
    </record>

    <record id="action_bill_of_lading_type" model="ir.actions.act_window">
        <field name="name">Bill Of Lading Types</field>
        <field name="res_model">bill.of.lading.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    

</odoo>