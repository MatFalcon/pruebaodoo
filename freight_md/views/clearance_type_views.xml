<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_clearance_type_form" model="ir.ui.view">
        <field name="name">clearance.type.form</field>
        <field name="model">clearance.type</field>
        <field name="arch" type="xml">
            <form string="Clearance Type">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="status" widget="boolean_toggle" options="{'terminology': 'Clearance Type'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_clearance_type_tree" model="ir.ui.view">
        <field name="name">clearance.type.tree</field>
        <field name="model">clearance.type</field>
        <field name="arch" type="xml">
            <tree string="Clearance Types">
                <field name="code"/>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_clearance_type_search" model="ir.ui.view">
        <field name="name">clearance.type.search</field>
        <field name="model">clearance.type</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Active" name="filter_active" domain="[('status', '=', True)]"/>
                <filter string="Inactive" name="filter_inactive" domain="[('status', '=', False)]"/>
            </search>
        </field>
    </record>
    <record id="action_clearance_types" model="ir.actions.act_window">
        <field name="name">Clearance Types</field>
        <field name="res_model">clearance.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_clearance_type_tree"/>
        <field name="search_view_id" ref="view_clearance_type_search"/>
    </record>
</odoo>
