<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_vessel_form" model="ir.ui.view">
        <field name="name">vessel.form</field>
        <field name="model">vessel</field>
        <field name="arch" type="xml">
            <form string="Vessel">
                <sheet>
                    <group>
                        <field name="code" />
                        <field name="name" />
                        <field name="vessel_owner" />
                        <field name="status" widget='boolean_toggle' />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_vessel_tree" model="ir.ui.view">
        <field name="name">vessel.tree</field>
        <field name="model">vessel</field>
        <field name="arch" type="xml">
            <tree string="Vessel">
                <field name="code" />
                <field name="name" />
                <field name="vessel_owner" />
                <field name="status" widget='boolean_toggle' />
            </tree>
        </field>
    </record>

    <record id="action_vessel" model="ir.actions.act_window">
        <field name="name">Vessels</field>
        <field name="res_model">vessel</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_vessel_tree" />
    </record>

    <record id="view_vessel_search" model="ir.ui.view">
        <field name="name">Vessels Search</field>
        <field name="model">vessel</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Active" name="filter_active" domain="[('status', '=', True)]" />
                <filter string="Inactive" name="filter_inactive" domain="[('status', '=', False)]" />
                <group expand="0" string="Group by">
                    <filter name="group_by_vessel_ownerr" string="Vessel Owner" domain="[]"
                        context="{'group_by': 'vessel_owner'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>