<odoo>
    <record id="view_freight_tag_form" model="ir.ui.view">
        <field name="name">freight.tag.form</field>
        <field name="model">freight.tag</field>
        <field name="arch" type="xml">
            <form string="Freight Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_freight_tag_tree" model="ir.ui.view">
        <field name="name">freight.tag.tree</field>
        <field name="model">freight.tag</field>
        <field name="arch" type="xml">
            <tree string="Freight Tags">
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="action_freight_tag" model="ir.actions.act_window">
        <field name="name">Freight Tags</field>
        <field name="res_model">freight.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
