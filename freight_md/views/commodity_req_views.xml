<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_commodity_req_form" model="ir.ui.view">
        <field name="name">commodity.req.form</field>
        <field name="model">commodity.req</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_commodity_req_tree" model="ir.ui.view">
        <field name="name">commodity.req.tree</field>
        <field name="model">commodity.req</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_commodity_req" model="ir.actions.act_window">
        <field name="name">Commodities Req</field>
        <field name="res_model">commodity.req</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
