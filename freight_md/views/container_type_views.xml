<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_container_type_form" model="ir.ui.view">
        <field name="name">Container Type Form</field>
        <field name="model">container.type</field>
        <field name="arch" type="xml">
            <form string="Container Type">
                <sheet>
                    <group>
                        <group>

                            <field name="code" />
                            <field name="name" />
                            <field name="status" widget='boolean_toggle' />
                        </group>
                        <group>

                            <field name="is_type" />
                            <field name="size" />
                            <field name="volume" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_container_type_tree" model="ir.ui.view">
        <field name="name">Container Type Tree</field>
        <field name="model">container.type</field>
        <field name="arch" type="xml">
            <tree string="Container Type">
                <field name="code" />
                <field name="name" />
                <field name="size" />
                <field name="volume" />
                <field name="status" widget='boolean_toggle' />
            </tree>
        </field>
    </record>

    <record id="action_container_type" model="ir.actions.act_window">
        <field name="name">Container Types</field>
        <field name="res_model">container.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': True}</field>
    </record>
    <record id="view_container_type_search" model="ir.ui.view">
        <field name="name">Container Type Search</field>
        <field name="model">container.type</field>
        <field name="arch" type="xml">
            <search string="Container Type Search">
                <filter string="Active" name="filter_active" domain="[('status', '=', True)]" />
                <filter string="Inactive" name="filter_inactive" domain="[('status', '=', False)]" />
            </search>
        </field>
    </record>
</odoo>