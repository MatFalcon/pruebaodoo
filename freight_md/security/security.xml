<odoo>
    <record id="group_freight_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_services_freight_md" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />

    </record>

    <record id="group_freight_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_services_freight_md" />
        <field name="implied_ids" eval="[(4, ref('group_freight_user'))]" />
        <field name="users" eval="[(4, ref('base.user_admin'))]" />
    </record>

    <record id="group_freight_admin" model="res.groups">
        <field name="name">Administration</field>
        <field name="category_id" ref="base.module_category_services_freight_md" />
        <field name="implied_ids" eval="[(4, ref('group_freight_manager'))]" />
        <field name="users" eval="[(4, ref('base.user_root'))]" />
    </record>
    <record id="freight_md_user_rule" model="ir.rule">
        <field name="name">Freight MD User Rule</field>
        <field name="model_id" ref="model_freight_md"/>
        <field name="groups" eval="[(4, ref('group_freight_user'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

    <record id="freight_md_manager_rule" model="ir.rule">
        <field name="name">Freight MD Manager Rule</field>
        <field name="model_id" ref="model_freight_md"/>
        <field name="groups" eval="[(4, ref('group_freight_manager'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

    <record id="freight_md_admin_rule" model="ir.rule">
        <field name="name">Freight MD Admin Rule</field>
        <field name="model_id" ref="model_freight_md"/>
        <field name="groups" eval="[(4, ref('group_freight_admin'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>
</odoo>