<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_template_sale_proposal" model="mail.template">
        <field name="name">Sale Proposal</field>
        <field name="model_id" ref="portal_proposal.model_sale_proposal" />
        <field name="subject">Review Your Proposal: ${object.name}</field>
        <field name="email_from">${user.email_formatted}</field>
        <field name="partner_to">${object.partner_id.id}</field>
        <field name="description">Sent to customers for reviewing their proposal</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 20px;"> Dear <t
                        t-out="object.partner_id.name" />, <br /><br /> Please review your sale
                    proposal by clicking on the link below: <br />
                    <a t-att-href="'/my/proposal/' + str(object.id)"><h5>View Proposal</h5></a>
                <br /><br />
                    Best regards, <br />
                <t t-out="user.name" />
                </p>
            </div>
        </field>
        <field name="lang">${object.partner_id.lang}</field>
        <field name="auto_delete" eval="True" />
    </record>
</odoo>
